        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title" id="heading">Sales Report</h2>
                </div>
                <div>
                    <button onclick="downloadPdf('Sales Report')" class="btn btn-dark">Download PDF</button>
                    <button onclick="downloadExcel()" class="btn btn-dark">Download Excel</button>
                </div>
            </div>

            <div class="card mb-4">
                <header class="card-header">
                    <div class="row gx-3">
                        <div class="col-lg-4 col-md-6 me-auto">
                            <form action="/salesReport" method="get">
                                <div class="row">
                                    <label for="">start-date</label>
                                    <div class="d-flex">
                                        <input style="background-color: #0D0C11; width: 150px; margin-bottom: 3px;"
                                            type="date" class="form-control text-white" name="startDate"
                                            value="<%= startDate %>">
                                        <input type="submit" value="Submit" style="margin-left: 10px; height: 40px;"
                                            class="btn btn-md btn-sm font-sm">
                                    </div>
                                </div>
                                <label for="">end-date</label>
                                <input style="background-color: #0D0C11; width: 150px;" type="date"
                                    class="form-control text-white" name="endDate" value="<%= endDate %>">
                            </form>
                        </div>
                        <div class="col-lg-2 col-6 col-md-3">
                            <form action="/salesReport" method="get">
                                <label for="">Filter by : </label>
                                <select name="filter" class="form-select">
                                    <option value="all" <%=filter==='all' ? 'selected' : '' %>>All</option>
                                    <option value="daily" <%=filter==='daily' ? 'selected' : '' %>>Daily</option>
                                    <option value="weekly" <%=filter==='weekly' ? 'selected' : '' %>>Weekly</option>
                                    <option value="monthtly" <%=filter==='monthtly' ? 'selected' : '' %>>Monthly
                                    </option>
                                    <option value="yearly" <%=filter==='yearly' ? 'selected' : '' %>>Yearly</option>

                                </select>
                                <!-- <a type="submit" class="btn btn-md btn-sm mt-1 w-100">Submit</a> -->
                                <input type="submit" value="submit" class="btn btn-md btn-sm mt-1 w-100">
                            </form>
                        </div>
                    </div>
                </header>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <% if(orders.length!=0){ %><!-- card-header end// -->
                                <thead>
                                    <tr class="text-white">
                                        <th>Order ID</th>
                                        <th>Email</th>
                                        <th>Date</th>
                                        <th>Discount</th>
                                        <th>Paid</th>
                                        <th>Method</th>
                                    </tr>
                                </thead>
                                <tbody class="text-white">
                                    <% orders.forEach(order=>{ %>
                                        <tr>
                                            <td>
                                                <%= order._id %>
                                            </td>
                                            <td>
                                                <%= order.userId.email %>
                                            </td>
                                            <td>
                                                <%= new Date(order.orderDate).toLocaleDateString() %>
                                            </td>
                                            <td>
                                                <% if(order.discount===0){ %>
                                                    <p>' N/A '</p>
                                                    <% }else{ %>
                                                        <%= order.discount %>
                                                            <% } %>
                                            </td>
                                            <td>
                                                <%= order.totalPrice %>
                                            </td>
                                            <td>
                                                <%= order.paymentMethod %>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                                <% }else{ %>
                                    <p>no orders found</p>
                                    <% } %> <!-- card-body end// -->
                        </table> <!-- table-responsive.// -->
                    </div>
                </div>
