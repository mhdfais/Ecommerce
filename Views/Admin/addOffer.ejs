            </div>
        </header>
        <section class="content-main">
            <div class="row">
                <div class="col-9">
                    <div class="content-header">
                        <h2 class="content-title"> New Offer</h2>
                    </div>
                    <p style="color: red;">
                        <%#= coupExist %>
                    </p>
                </div>
                <div class="col-lg-6">
                    <div class="card mb-4">
                        <div class="card-body">
                            <form action="/offer/add-offer" method="post" onsubmit="return validateForm()">
                                <div class="mb-4">
                                    <label style="color: white;" for="coupon_code" class="form-label">Offer name</label>
                                    <input style="background-color: #0D0C11; color: white;" type="text"
                                        placeholder="enter offer name" class="form-control" name="offerName" id="coupon_code">
                                    <span id="code-error" style="color: red;"></span>
                                </div>

                                <div class="mb-4">
                                    <label style="color: white;" for="coupon_description" class="form-label">Discount
                                        type</label>
                                    <select style="background-color: #0D0C11; color: white;" id="offerType" name="offerType" class="form-select"
                                        onchange="toggleApplicableFields()" required>
                                        <option value="product">Product</option>
                                        <option value="category">Category</option>
                                    </select>
                                    <span id="description-error" style="color: red;"></span>
                                </div>

                                <div class="mb-4">
                                    <label style="color: white;" for="percentage" class="form-label">Discount
                                        (%)</label>
                                    <input style="background-color: #0D0C11; color: white;" type="text"
                                        placeholder="Enter percentage" class="form-control" name="discountPercentage"
                                        id="percentage">
                                    <span id="price-error" style="color: red;"></span>
                                </div>

                                <div class="row mb-4">
                                    <div class="col-lg-6">
                                        <label style="color: white;" class="form-label">Start Date</label>
                                        <input style="background-color: #0D0C11; color: white;" type="date" class="form-control" name="startDate" required>
                                    </div>
                                    <div class="col-lg-6">
                                        <label style="color: white;" class="form-label">End Date</label>
                                        <input style="background-color: #0D0C11; color: white;" type="date" class="form-control" name="endDate" required>
                                    </div>
                                </div>
                                <div id="applicableProducts" class="mb-4">
                                    <label style="color: white;" class="form-label h5">Applicable Products</label>
                                    <% if (products && products.length > 0) { %>
                                        <div class="list-group border rounded p-2" style="max-height: 200px; overflow-y: auto;">
                                            <% products.forEach(product => { %>
                                                <div style="background-color: #0D0C11; color: white;" class="form-check list-group-item d-flex justify-content-between align-items-center">
                                                    <input 
                                                        class="form-check-input" 
                                                        type="checkbox" 
                                                        name="applicableProducts[]" 
                                                        value="<%= product._id %>" 
                                                        id="product-<%= product._id %>"
                                                    >
                                                    <label class="form-check-label" for="product-<%= product._id %>">
                                                        <%= product.title %>
                                                    </label>
                                                </div>
                                            <% }); %>
                                        </div>
                                    <% } else { %>
                                        <div class="alert alert-warning mt-2" role="alert">
                                            No applicable products available.
                                        </div>
                                    <% } %>
                                </div>
                                
                                <div id="applicableCategories" class="mb-4 hidden">
                                    <label style="color: white;" class="form-label h5">Applicable Categories</label>
                                    <% if (categories && categories.length > 0) { %>
                                        <div class="list-group border rounded p-2" style="max-height: 200px; overflow-y: auto;">
                                            <% categories.forEach(category => { %>
                                                <div style="background-color: #0D0C11; color: white;" class="form-check list-group-item d-flex justify-content-between align-items-center">
                                                    <input 
                                                        class="form-check-input" 
                                                        type="checkbox" 
                                                        name="applicableCategories[]" 
                                                        value="<%= category._id %>" 
                                                        id="category-<%= category._id %>"
                                                    >
                                                    <label class="form-check-label" for="category-<%= category._id %>">
                                                        <%= category.category %>
                                                    </label>
                                                </div>
                                            <% }); %>
                                        </div>
                                    <% } else { %>
                                        <div class="alert alert-warning mt-2" role="alert">
                                            No applicable categories available.
                                        </div>
                                    <% } %>
                                </div>

                                <input class="btn btn-secondary" type="submit" value="Add">
                            </form>

                        </div> <!-- card end// -->
                    </div>
                </div>
        </section> <!-- content-main end// -->

        <script>
            function toggleApplicableFields() {
                const offerType = document.getElementById('offerType').value;
                const applicableProducts = document.getElementById('applicableProducts');
                const applicableCategories = document.getElementById('applicableCategories');
                
                if (offerType === 'product') {
                    applicableProducts.classList.remove('hidden');
                    applicableCategories.classList.add('hidden');
                } else if (offerType === 'category') {
                    applicableProducts.classList.add('hidden');
                    applicableCategories.classList.remove('hidden');
                }
            }
        </script>

