    <main class="main-wrap">
        <header style="background-color: #0D0C11;" class="main-header navbar">
            <div class="col-search">
            </div>
            <div class="col-nav">
                <button class="btn btn-icon btn-mobile me-auto" data-trigger="#offcanvas_aside"> <i
                        class="material-icons md-apps"></i> </button>
                <a class="dropdown-item text-danger" href="/admin-logout"><i class="material-icons md-exit_to_app"></i>Logout</a>
            </div>
        </header>
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Categories </h2>
                    <p>Add, edit or delete a category</p>
                </div>
                <div>
                    <a href="/add-category" class="btn btn-dark add">Add Category</a>
                </div>
            </div>
            <div  style="background-color: #0D0C11;" class="card">
         
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr class="text-white">
                                    <th style="width: 20%;">Category</th>
                                    <th style="width: 50%;">Description</th>
                                    <th style="width: 15%;">Status</th>
                                    <th style="width: 15%;">Action</th>
                                   
                                </tr>
                            </thead>
                            <tbody class="text-white">
                                <% data.forEach(data=> {%>
                                <tr>
                                    
                                    <td><%= data.category %></td>
                                    <td><%= data.description %></td>
                                    <td>
                                        <% if(data.isListed){ %>
                                            <span class="badge rounded-pill alert-success">Listed</span>
                                        <% }else{ %>
                                            <span class="badge rounded-pill alert-danger">Unlisted</span>
                                        <% } %>        
                                    </td>
                                    <td>
                                        <a class="btn btn-outline-warning btn-sm" href="/edit-category/<%= data._id %>">Edit</a> 
                                        <% if(data.isListed){ %>
                                            <form action="/unlist-category/<%= data._id %>" method="post">
                                                <button type="submit" class="btn btn-outline-warning btn-sm">Unlist</button>
                                            </form>
                                           <% }else{ %>
                                            <form action="/list-category/<%= data._id %>" method="post">
                                                <button type="submit" class="btn btn-outline-warning btn-sm" href="">List</button> 
                                            </form>
                                            <% } %>
                                    </td> 
                                    
                                </tr>
                                <% }) %>


                            </tbody>
                        </table> <!-- table-responsive.// -->
                    </div>
                </div> <!-- card-body end// -->
            </div> <!-- card .// -->
        </section> <!-- content-main end// -->
