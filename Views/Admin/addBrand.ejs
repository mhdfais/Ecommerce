    <script>
        function validateForm() {
            document.getElementById('brandError').innerText = "";
            document.getElementById('descriptionError').innerText = "";
    
            const brand_name = document.getElementById('brand_name').value.trim();
            const brand_description = document.getElementById('brand_description').value.trim();
    
            let isValid = true;
    
            if (brand_name === "") {
                document.getElementById('brandError').innerText = "Brand name is required.";
                isValid = false;
            }
    
            if (brand_description === "") {
                document.getElementById('descriptionError').innerText = "Brand description is required.";
                isValid = false;
            }
    
            return isValid; 
        }
    </script>

