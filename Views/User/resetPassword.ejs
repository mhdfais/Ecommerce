<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    

    <style>
        /* General Styling */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        /* Container */
        .container {
            max-width: 400px;
            width: 100%;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        /* Company Logo */
        .company_logo {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }

        .company_logo img {
            width: 121px;
            height: auto;
        }

        /* Card Title */
        .card_title {
            text-align: center;
            margin-bottom: 20px;
        }

        .card_title h1 {
            font-size: 22px;
            color: #333;
        }

        .card_title span {
            display: block;
            font-size: 12px;
        }

        /* Form */
        .form {
            display: flex;
            flex-direction: column;
        }

        .form input[type="email"],
        .form input[type="password"] {
            width: 100%;
            padding: 12px;
            margin-bottom: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            box-sizing: border-box;
        }

        .form input[type="email"]:focus,
        .form input[type="password"]:focus {
            border-color: #4a90e2;
            outline: none;
        }

        button {
            width: 100%;
            padding: 12px;
            background-color: #4a90e2;
            border: none;
            color: white;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        button:hover {
            background-color: #357ABD;
        }

        /* Google Button */
        .google-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #4285F4;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 12px;
            margin-top: 10px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s;
        }

        .google-btn:hover {
            background-color: #357ABD;
        }

        /* Error messages */
        p {
            font-size: 14px;
            color: red;
            text-align: center;
        }

        /* Responsive design */
        @media (max-width: 480px) {
            .container {
                padding: 15px;
            }

            .card_title h1 {
                font-size: 20px;
            }

            button,
            .google-btn {
                font-size: 14px;
            }
        }
    </style>

    <div class="container">
        <div class="card">
            <!-- Company Name -->
            <div class="company_logo">
                <img src="user/logo-11.svg" alt="Company Logo">
            </div>

            <div class="card_title">
                <h1>Reset password</h1>

            </div>

            <p style="color: red; text-align: center;">

            </p>

            <div class="form">
                <form action="/reset-password" method="post" onsubmit="return validateForm()">
                    <p style="color: red;">
                        <%= pswdMatch %>
                        <%= samePswd %>
                        
                    </p>
                    <input type="hidden" value="<%= token %>" name="token">
                
                    <div class="mb-4">
                        <input type="password" name="pswd" placeholder="New password" required="true" id="pswd" />
                        <span id="pswdError" class="error-message"></span>
                    </div>
                
                    <div class="mb-4">
                        <input type="password" name="confirmPswd" placeholder="Confirm new password" required="true"
                            id="confirmPswd" />
                        <span id="confirmPswdError" class="error-message"></span>
                    </div>
                
                    <button type="submit">Update</button>
                </form>


            </div>
        </div>
    </div>

    <style>
        .error-message {
            color: red;
            font-size: 0.875em;
        }
    </style>

    <script>
        function validateForm() {
            document.getElementById('pswdError').innerText = "";
            document.getElementById('confirmPswdError').innerText = "";
    
            const pswd = document.getElementById("pswd").value.trim();
            const confirmPswd = document.getElementById('confirmPswd').value.trim();
            let isValid = true;
    
            if (pswd === "") {
                document.getElementById('pswdError').innerText = "New password is required.";
                isValid = false;
            }
            if (confirmPswd === "") {
                document.getElementById('confirmPswdError').innerText = "Please confirm the new password.";
                isValid = false;
            }
    
            if (pswd.length < 6) {
                document.getElementById('pswdError').innerText = "Password must be at least 6 characters long.";
                isValid = false;
            }
    
            if (pswd !== confirmPswd) {
                document.getElementById('confirmPswdError').innerText = "Passwords do not match.";
                isValid = false;
            }
    
            return isValid; 
        }
    </script>

</body>
</html>